<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.zackratos.ultimatesample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name="org.zackratos.ultimatesample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.zackratos.ultimatesample.ColorBarActivity"
            android:label="ColorBar" />
        <activity android:name="org.zackratos.ultimatesample.TransparentBarActivity1"
            android:label="transparent"/>
        <activity android:name="org.zackratos.ultimatesample.HideBarActivity1"
            android:label="hint"/>
        <activity android:name="org.zackratos.ultimatesample.ImmersionBarActivity"
            android:label="immersion"/>
        <activity android:name="org.zackratos.ultimatesample.HideBarActivity2"
            android:label="hint"/>
        <activity android:name="org.zackratos.ultimatesample.TransparentBarActivity2"
            android:label="transparent"/>
        <activity android:name=".DrawerActivity"
            android:label="DrawerColorBar"/>
    </application>

</manifest>